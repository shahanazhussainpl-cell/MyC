#include <stdio.h>

// Function to compute factorial
long double factorial(int n) {
    long double result = 1;
    for (int i = 2; i <= n; i++) {
        result *= i;
    }
    return result;
}

// Function to compute sin(x) using Taylor expansion
long double sin_approx(double x, int terms) {
    long double sum = 0;
    int sign = 1;
    for (int i = 1; i <= 2 * terms - 1; i += 2) {
        sum += sign * (pow(x, i) / factorial(i));
        sign *= -1; // Alternate signs
    }
    return sum;
}

int main() {
    double x;
    int terms;

    printf("Enter value of x in radians: ");
    scanf("%lf", &x);

    printf("Enter number of terms for series: ");
    scanf("%d", &terms);

    printf("Approximate value of sin(%.2lf): %Lf
", x, sin_approx(x, terms));
    return 0;
}
