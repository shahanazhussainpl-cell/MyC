#include <stdio.h>

void selectionSortDescending(int arr[], int n) {
    int i, j, max_idx;

     
    for (i = 0; i < n - 1; i++) {
       
        max_idx = i;
        for (j = i + 1; j < n; j++) {
            if (arr[j] > arr[max_idx]) {
                max_idx = j;
            }
        }

        int temp = arr[max_idx];
        arr[max_idx] = arr[i];
        arr[i] = temp;
    }
}

int main() {
  
    int scores[] = {85, 72, 91, 65, 88, 77};
    int n = sizeof(scores) / sizeof(scores[0]);

    printf("Original scores:\n");
    for (int i = 0; i < n; i++) {
        printf("%d ", scores[i]);
    }
    printf("\n\n");

    selectionSortDescending(scores, n);

    printf("Scores arranged in descending order:\n");
    for (int i = 0; i < n; i++) {
        printf("%d ", scores[i]);
    }
    printf("\n");

    return 0;
}
